{
  "name": "Grocery price tracker",
  "version": "0.4.0",
  "description": "Tracks prices of groceries over time.",
  "content_scripts": [
   {
     "all_frames": false,
     "matches": ["*://*.walmart.com/*"],
     "js": ["content.bundle.js"]
   }
 ],
 "permissions": [
   "activeTab",
   "tabs",
   "storage",
   "debugger",
   "*://*.walmart.com/*",
   "*://*.walmart.com/v3/api/products/*"
 ],
 "background": {
    "page": "background.html",
    "persistent": false
 },
  "manifest_version": 2
}

